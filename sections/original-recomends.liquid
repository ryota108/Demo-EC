<section>   
  <h1 class="sectionTitle">{{section.settings.RecommendTitle}}</h1>
  <div class="container">
    <ul class="product__all">
      {% assign collection = collections["recommend"] %}
      {% for product in collections[section.settings.feature_collection].products %}
      <li class="product__list">
      <a href={{product.url}}>
          <div class="product">
            <figure class="product-thumbnail"><img class="product__image" src="{{ product.featured_image | img_url:'300x' }}"></figure>
            <div class="product__info">
              <h1 class="product__title">{{product.title}}</h1>
              <div class="product__descriptionArea">
                <p class="product__description">{{product.description}}</p>
              </div>
              <p class="product__explainTap">Tapで購入ページへ</p>
            </div>
          </div>
        </li>
      </a>
      {% endfor%}
    </ul>
  </div>
</section>
{%schema%}
{
	"name": "Recommend",
	"settings": [
  {
    "type": "text",
    "id": "RecommendTitle",
    "default":"Recommend",
    "label": "おすすめ欄のタイトルを入力してください"
  },{
    "type": "collection",
            "id": "feature_collection",
            "label": "Chose Collection to show on slideshow"
  }
	]
}
{%endschema%}