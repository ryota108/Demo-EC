<section class="blogSection">
  <img class="blog__barner" src="{{article.image | img_url:"300x200"}}"/>
  <div>
<h1 class="blog__title">{{article.title}}</h1>
<hr class="blog__border"/>
<div>
  <div class="blog__info">
    <p>{{ article.created_at | time_tag: format: 'date'}}</p>
    <p >筆者:{{ article.author}}</p>
  </div>
  <div  class="blog__main">
    <p class="blog__text">{{article.content}}</p>
  </div>
</div>
  </div>
  <hr class="blog__border"/>
  <section>
    <div class="container">
      <h1 class="sectionTitle"><span>O</span>ther blogs</h1>
      {% for article in blogs["ALL"].articles |limit:2 %}
      <a href={{article.url}}>
        <div class="blog">
          <img src="{{article.image | img_url:"300x200"}}" alt="ブログのサムネイル" class="blog__thumbNail">
          <div style="width: 100%;">
            <h1 class="blog__articleTitle">{{article.title}}</h1>
            <p class="blog__publishDate">{{ article.published_at | time_tag: format: 'date' }}</p>
           </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </section>